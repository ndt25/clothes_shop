<% content_for :stylesheets do %>
	<link rel="stylesheet" type="text/css" href="/assets/user/login.css">
<% end %>

<% content_for :javascripts do %>
	<script type="text/javascript" src="/assets/user/login.js"></script>
<% end %>
<% content_for :page_heading do %>
	<h1>
		Đăng Nhập
		<small>Tài khoản</small>
	</h1>
	<ol class="breadcrumb">
		<li><a href="/"></i> Trang chủ</a></li>
		<li class="active">Đăng Nhập</li>
	</ol>
<% end %>
<div class="box box-primary">
	<div class="box-header with-border">
		<h3 class="box-title">Thông tin tài khoản</h3>
	</div>
	<!-- /.box-header -->
	<!-- form start -->
	<form role="form">
		<div class="box-body">
			<div class="form-group">
				<label for="exampleInputEmail1">Tài Khoản</label>
				<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Tài Khoản">
			</div>
			<div class="form-group">
				<label for="exampleInputPassword1">Mật Khẩu</label>
				<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Mật Khẩu">
			</div>
			<div class="checkbox">
				<label>
				<input type="checkbox">Ghi Nhớ
				</label>
			</div>
		</div>
		<div class="box-footer">
			<button type="submit" class="btn btn-primary">Đăng Nhập</button>
		</div>
	</form>
</div>