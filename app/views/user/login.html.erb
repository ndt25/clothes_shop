<% content_for :stylesheets do %>
	<link rel="stylesheet" type="text/css" href="/assets/user/login.css">
<% end %>

<% content_for :javascripts do %>
	<script type="text/javascript" src="/assets/user/login.js"></script>
<% end %>
<% content_for :page_heading do %>
	<h1>
		Đăng Nhập
		<small>Tài khoản</small>
	</h1>
	<ol class="breadcrumb">
		<li><a href="/"></i> Trang chủ</a></li>
		<li class="active">Đăng Nhập</li>
	</ol>
<% end %>
	
<%= form_for :user, url: '/user/login', method: 'post' do |f| %>
	<div class="form-group">
		<%= f.label :email, 'Email' %>
		<%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
	</div>
	<div class="form-group">
		<%= f.label :password, 'Mật khẩu' %>
		<%= f.password_field :password, class: 'form-control', placeholder: 'Mật khẩu' %>
	</div>	
	<div class="text-center">
		<%= f.submit 'Đăng Nhập', class: 'btn btn-primary btn-flat' %>
	</div>
<% end %>

